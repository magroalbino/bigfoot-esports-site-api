{
  "name": "sistema-noticias-lol",
  "version": "1.0.0",
  "description": "Sistema automático de notícias sobre League of Legends",
  "main": "index.html",
  "scripts": {
    "dev": "vercel dev",
    "build": "echo 'Build completed'",
    "start": "vercel dev",
    "deploy": "vercel --prod",
    "lint": "eslint js/**/*.js",
    "format": "prettier --write \"**/*.{js,css,html,json,md}\""
  },
  "keywords": [
    "league-of-legends",
    "lol",
    "noticias",
    "esports",
    "gaming",
    "news",
    "automated"
  ],
  "author": "Fabricio Ricard",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fabricioricard/bigfoot-esports.git"
  },
  "devDependencies": {
    "@vercel/node": "^3.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "vercel": {
    "functions": {
      "api/news.js": {
        "maxDuration": 10
      }
    }
  }
}
